<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsActivity"
    android:background="@color/white">


    <View
        android:id="@+id/topPanel"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:background="@color/blueset" />

    <TextView
        android:id="@+id/backButton"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="260dp"
        android:drawableLeft="@drawable/arrow_back"
        android:gravity="center"
        android:fontFamily="@font/montserrat_semibold"
        android:keyboardNavigationCluster="false"
        android:onClick="startNewActivity"
        android:text="@string/back_button"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_bold"
        android:shadowColor="@color/black"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Настройки"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/changeName"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/topPanel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Поменять имя пользователя"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/changeName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Поменять пароль"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/changeAvatar"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/changePassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Поменять фото профиля"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/contacts"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/changeAvatar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Контакты"
        android:textColor="@color/black"
        android:textSize="23dp" />


</RelativeLayout>